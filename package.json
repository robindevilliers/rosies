{
  "name": "name",
  "version": "2.1.0",
  "homepage": "https://github.com/twbs/bootstrap-npm-starter#readme",
  "scripts": {
    "clean" : "rm -rf dist",
    "css:scss": "sass src/scss/main.scss dist/main.css -I . -q --style=compressed",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*",
    "start": "run-p watch"
  },
  "dependencies": {
    "bootstrap": "^4.6.2",
    "bootstrap-icons": "^1.10.3",
    "jquery": "^3.6.4",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "browser-sync": "^2.29.1",
    "htmlnano": "^2.0.3",
    "imagemin-cli": "^7.0.0",
    "live-server": "^1.2.2",
    "sass": "^1.83.4",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.6",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-extend": "^0.6.5",
    "posthtml-modules": "^0.9.1",
    "purgecss": "^5.0.0",
    "stylelint": "^14.16.1",
    "stylelint-config-twbs-bootstrap": "^7.0.0",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  }
}

